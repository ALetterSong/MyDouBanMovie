<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/movie_placeholder">
    <include layout="@layout/custom_toolbar" />

    <ImageView
        android:id="@+id/movie_info_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="tv_title"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_directors"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="tv_directors"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_casts"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="tv_casts"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_genres"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="tv_genres"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="tv_summary"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>