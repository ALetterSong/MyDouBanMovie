<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/search_item_movie_imageview"
        android:layout_width="80dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/search_item_movie_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="title"
        android:gravity="center|top"
        android:textSize="28sp"
        android:layout_toRightOf="@id/search_item_movie_imageview"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2015 1 1"
        android:gravity="right"
        android:id="@+id/search_item_movie_time"
        android:layout_below="@+id/search_item_movie_title"
        android:layout_toRightOf="@id/search_item_movie_imageview"/>


</RelativeLayout>