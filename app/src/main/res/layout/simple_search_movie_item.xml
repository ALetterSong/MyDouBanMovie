<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_item_movie_imageview"
        android:layout_width="80dp"
        android:layout_height="125dp" />

    <TextView
        android:id="@+id/movie"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_toRightOf="@id/search_item_movie_imageview"
        android:paddingLeft="10dp"
        android:text="电影" />

    <TextView
        android:id="@+id/search_item_movie_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/movie"
        android:layout_toRightOf="@id/search_item_movie_imageview"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_item_movie_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_item_movie_title"
        android:layout_toRightOf="@id/search_item_movie_imageview"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="2015 5 8" />


</RelativeLayout>